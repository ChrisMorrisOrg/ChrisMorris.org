@import 'nib';

$standard-text-color = rgb(178, 216, 250)
$standard-text-color-highlight = rgb(250, 250, 250)
$standard-text-color-alpha = rgba(178, 216, 250, 0.5)

blockquote.twitter-tweet {
  font-family: Soleil, sans-serif;
}

html {
  font-size: 100%;
  text-size-adjust: 100%;
  height: 100%;
}
body {
  margin: 0;
  padding: 0;
  background-attachment: fixed;
  background-clip: border-box;
  background-color: rgb(65, 45, 125);
  background-image: radial-gradient(50% 135%, 150% 200%, rgb(80, 180, 230), rgb(65, 45, 125) 48%, rgb(0, 0, 0) 100%);
  background-repeat: no-repeat;
  background-origin: padding-box;
  background-size: auto;
  font-family: Soleil, sans-serif;
  font-smoothing: antialiased;
  font-size: 1em;
  line-height: 1.4;
  color: $standard-text-color;
  height: 100%;
}
a, footer, li img {
  transition: 0.2s all ease-in-out;
}
#container {
  cursor: default;
  display: block;
  max-width: 60em;
  margin: 0 auto;
  padding: 0 1em;
  header#global-header {
    border-width: 0 0 1px 0;
    border-style: solid;
    border-image: linear-gradient(to right, rgba(178, 216, 250, 0), rgba(178, 216, 250, 0.4) 50%, rgba(178, 216, 250, 0));
    border-image-slice: 1;
    /*background-image: radial-gradient(50% 100%, 50% 10%, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0) 75%);*/
    display: flex;
    padding: 0.5em 0 0 0;
    align-items: center;
    justify-content: space-between;
    a {
      color: #fff;
      text-decoration: none;
    }
    h1 {
      font-weight: 600;
      font-size: 3em;
      margin: 0.4em 0;
    }
    nav {
      font-size: 1.2em;
      ul {
        margin: 0;
        padding: 0;
        list-style: none;
        display: flex;
        li {
          a {
            border-radius: 0.25em;
            color: $standard-text-color;
            border: 1px solid rgba(0,0,0,0);
            padding: 0.5em 0.5em 0.35em 0.5em;
            margin: 0 0.5em;
            &:hover {
              border-color: $standard-text-color;
            }
            &.selected-outline {
              border-color: $standard-text-color-highlight;
              color: $standard-text-color-highlight;
            }
            &.selected-outline:hover {
              border-color: $standard-text-color-highlight;
              color: $standard-text-color-highlight;
            }
          }
        }
      }
    }
  }
  footer#global-footer {
    border-width: 1px 0 0 0;
    border-style: solid;
    border-image: linear-gradient(to right, rgba(178, 216, 250, 0), rgba(178, 216, 250, 0.4) 50%, rgba(178, 216, 250, 0));
    border-image-slice: 1;
    /*background-image: radial-gradient(50% 100%, 50% 10%, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0) 75%);*/
    display: flex;
    margin: 2em 0 0 0;
    padding: 2em 0 4em 0;
    text-align: center;
    align-items: center;
    justify-content: space-between;
  }
}

#main-container {
  display: flex;
  ul.link-list {
    list-style: none;
    margin: 0;
    padding: 0;
    li {
      margin: 0;
      padding: 0;
      a {
        padding: 0.5em 0;
        display: block;
        border: none;
        text-decoration: none;
      }
      a:hover {
        text-decoration: none;
        footer {
          color: $standard-text-color-highlight;
          font-size: 0.9em;
        }
      }
      footer {
        color: $standard-text-color;
        font-size: 0.9em;
      }
    }
    li:first-child {
      a {
        padding: 0 0 0.5em 0;
      }
    }
  }
  h1 {
    font-weight: 100;
    font-size: 2em;
    margin: 0.8em 0;
    color: #fff;
  }
  a {
    color: rgb(40, 205, 125);
    text-decoration: underline;
    /*border-bottom: 1px solid rgb(40, 205, 125);*/
    &:hover {
      text-decoration: none;
      /*border-bottom: 1px solid rgb(51, 255, 156);*/
      color: rgb(51, 255, 156);
    }
  }
  article {
    font-size: 1.25em;
    width: 100%;
    img {
      width: 100%;
    }
    p {
      line-height: 1.5em;
    }
    h1 {
      color: #fff;
      font-weight: 100;
      text-align: center;
      margin: 0.8em 0 0.2em;
    }
    h2 {
      color: #fff;
      text-align: center;
      font-weight: 100;
    }
    .highlighter-rouge {
      padding: 1em;
      background: rgba(0, 0, 0, 0.2);
      border-radius: 1em;
      pre {
        margin: 0;
      }
    }
    ul.gallery {
      list-style: none;
      padding: 1em 0.75em 0.5em 0.75em;
      border-radius: 1em;
      background: rgba(0, 0, 0, 0.2);
      margin: 0 -0.5em 1em -0.5em;
      display: flex;
      flex-wrap: wrap;
      li {
        width: 25%;
        padding: 0.25em 0.5em;
        box-sizing: border-box;
        img {
          width: 100%;
          border-radius: 0.333em;
        }
      }
    }
  }
  blockquote {
    padding: 1em 3em;
    position: relative;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 1em;
    cite {
      display: block;
      text-align: right;
      font-size: 0.9em;
    }
  }
  blockquote::before {
    font-family: "Times New Roman";
    content: "â€œ";
    position: absolute;
    top: 0.25em;
    left: 0.5em;
    font-size: 2em;
    font-weight: bold;
    color: $standard-text-color-alpha;
  }
  header#meta {
    font-size: 0.9em;
    margin: 0 0 2em 0;
    display: block;
    text-align: center;
    color: #FFF;
    & > :not(:last-child)::after {
      content: " \2022 ";
      padding: 0 0.5em;
    }
    ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: inline;
      li {
        display: inline;
        &:not(:last-child)::after {
          content: ", ";
        }
      }
    }
  }
  section#main-fill {
    width: 100%;
  }
  section#main {
    width: 65%;
  }
  section#sidebar {
    width: 35%;
  }
}


div#overlay {
  display: none;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  #image-placeholder {
    width: 100%;
    height: 100%;
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
  }
}


@media only screen and (max-width: 46em) {
  #main-container {
    display: block;
    section#main {
      width: 100%;
    }
    section#sidebar {
      width: 100%;
    }
    article {
      ul.gallery {
        list-style: none;
        padding: 1em 0.75em 0.5em 0.75em;
        border-radius: 1em;
        background: rgba(0, 0, 0, 0.2);
        margin: 0 0 1em 0;
        display: flex;
        flex-wrap: wrap;
        li {
          width: 50%;
          padding: 0.25em 0.5em;
          box-sizing: border-box;
          img {
            width: 100%;
            border-radius: 0.333em;
          }
        }
      }
    }
  }

  #container {
    header#global-header {
      display: block;
      padding: 0.25em 0 1em 0;
      align-items: none;
      justify-content: none;
      text-align: center;
      nav {
        display: inline-block;
        h1 {
          font-size: 2.5em;
        }
      }
    }
  }
}
