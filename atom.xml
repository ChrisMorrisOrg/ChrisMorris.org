---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:lang="en-US">
  <title type="text">ChrisMorris.org</title>
  <subtitle type="text">Scitechivity!</subtitle>

  <updated>{{ site.time | date_to_xmlschema }}</updated>

  <link rel="alternate" type="text/html" href="http://chrismorris.org" />
  <id>http://chrismorris.org</id>
  <link rel="self" type="application/atom+xml" href="http://chrismorris.org/atom.xml" />

  <author>
    <name>Chris Morris</name>
    <uri>http://chrismorris.org</uri>
  </author>

  {% for post in site.posts limit: 20 %}
  {% unless post.hidden %}
  <entry>
    <title>{{ post.title | xml_escape }}</title>
    <author>
      <name>Chris Morris</name>
      <uri>http://chrismorris.org</uri>
    </author>
    <link rel="alternate" type="text/html" href="http://chrismorris.org{{ post.url }}"/>
    <id>http://chrismorris.org{{ post.id }}</id>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <summary type="html"><![CDATA[{{ post.content | strip_html | truncatewords: 55 }}]]></summary>
    <content type="html" xml:base="http://chrismorris.org{{ post.url }}"><![CDATA[{{ post.content }}]]></content>
  </entry>
  {% endunless  %}
  {% endfor %}

</feed>
